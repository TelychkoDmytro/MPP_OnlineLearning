<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New Schedule</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
      margin: 0;
      padding: 0;
    }
    .form-container {
      max-width: 600px;
      margin: 50px auto;
      background: #fff;
      padding: 20px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      border-radius: 10px;
    }
    .form-header {
      text-align: center;
      margin-bottom: 20px;
    }
    .form-header h1 {
      margin: 0;
      font-size: 28px;
      color: #333;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <div class="form-header">
      <h1>New Schedule</h1>
      <p>Find me in app/views/schedules/new.html.erb</p>
    </div>

    <%= form_with(model: @schedule, local: true, html: { class: 'form-horizontal' }) do |form| %>
      <% if @schedule.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <h2><%= pluralize(@schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>
          <ul>
            <% @schedule.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group row">
        <%= form.label :time, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= form.datetime_field :time, class: 'form-control' %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :teacher, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= form.collection_select :teacher_id, Teacher.all, :id, :full_name, { prompt: 'Select a teacher' }, { class: 'form-control' } %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :subject, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= form.collection_select :subject_id, Subject.all, :id, :name, { prompt: 'Select a subject' }, { class: 'form-control' } %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :schedule_type, "Type", class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= form.select :schedule_type, options_for_select([['Lecture', 'lecture'], ['Practic', 'practic']]), { prompt: 'Select a schedule_type' }, { class: 'form-control' } %>
        </div>
      </div>

      <div class="form-group row">
        <%= form.label :group_ids, "Groups", class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= form.collection_select :group_ids, Group.all, :id, :name, { prompt: 'Select groups'}, { multiple: true, class: 'form-control' } %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit 'Create Schedule', class: 'btn btn-primary' %>
          <%= link_to 'Back', schedules_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    <% end %>
  </div>
</body>
</html>
